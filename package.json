{
  "name": "redux-fetch-connect",
  "version": "1.0.0",
  "private": true,
  "description": "Fetching data server-side and client-side for Universal apps using Redux",
  "scripts": {
    "lint": "eslint ./ --config ./package.json --ignore-path ./.eslintignore"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.12.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1"
  },
  "dependencies": {
    "@nicolascava/reducer": "^1.0.0",
    "hoist-non-react-statics": "^2.5.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "redux": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "max-len": [
        2,
        100,
        4,
        {
          "ignorePattern": "\\s*<"
        }
      ]
    },
    "globals": {
      "document": true,
      "window": true,
      "navigator": true,
      "URL": true,
      "fetch": true
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": true,
          "regenerator": true
        }
      ]
    ]
  }
}
